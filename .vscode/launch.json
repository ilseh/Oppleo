    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Huidige bestand",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "pythonPath": "${command:python.interpreterPath}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Flask Websocket",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "pythonPath": "${command:python.interpreterPath}",
            "program": "./src/nl/oppleo/webapp/Oppleo.py",
            "gevent": true,
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "FLASK_APP": "Oppleo.py",
                "FLASK_ENV": "Development",
                "PYTHONPATH": "./src",
            },
            "jinja": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "PYTHONPATH": "./src",
                "FLASK_DEBUG": "0",
                "DATABASE_URL": "postgresql://charger:charger@10.0.1.160:5432/charger",
                "oppleo_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}